@model MyCarService.Models.MainModel
@{
    ViewBag.Title = "Package";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-sm-12">
                <section class="card">
                    <header class="card-header">
                        <a href="/Package/AddPackage?Id=@Guid.Empty" class="text-success"><i class="fa fa-plus fa-2x" aria-hidden="true">&nbsp;  </i>Add New Package</a>
                        <span class="tools pull-right">
                            <a href="javascript:;" class="fa fa-chevron-down"></a>
                            <a href="javascript:;" class="fa fa-times"></a>
                        </span>
                    </header>
                    <div class="card-body">
                        <div class="adv-table">
                            <div id="DataDiv">
                                @{Html.RenderPartial("~/Views/Package/_PackagePartail.cshtml", @Model);}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>