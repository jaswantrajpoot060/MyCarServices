@*@model BusinessObject.FeedBack*@
@model MyCarService.Models.MainModel
@{
    ViewBag.Title = "Add FeedBack Response";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-10 center">
                <section class="card">
                    <header class="card-header">
                        Basic Forms
                    </header>
                    <div class="card-body">
                        @using (Html.BeginForm("FeedbackResponse", "FeedBack", FormMethod.Post, new { @class = "" }))
                        {
                            <input type="hidden" id="Id" name="Id" value="@Model.FeedBack.Id" />
                            <div class="form-row">
                                <div class="col-md-6 mb-4">
                                    <label for="">Name</label>
                                    <input type="text" class="form-control" id="name" name="name" value="@Model.FeedBack.Name" required="">
                                    <div class="valid-feedback">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label for="">Email</label>
                                    <input type="text" class="form-control" id="email" name="email" value="@Model.FeedBack.Email" required="">
                                    <div class="valid-feedback">
                                    </div>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-4">
                                    <label for="">Contact</label>
                                    <input type="text" class="form-control" id="contact" name="contact" value="@Model.FeedBack.Contact" required="">
                                    <div class="valid-feedback">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label for="">Location</label>
                                    <input type="text" class="form-control" id="location" name="location" value="@Model.FeedBack.Location" required="">
                                    <div class="valid-feedback">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-4">
                                    <input id="0" name="Select" type="radio" value="Checked:@Model.FeedBack.AnswerId" />
                                    <label for="Excellent">
                                        Excellent
                                    </label>
                                    <div class=" form-coverage">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input id="1" name="Select" type="radio"  value="Checked:@Model.FeedBack.AnswerId" />
                                    <label for="Very Good">
                                        Very Good
                                    </label>
                                    <div class=" form-coverage">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input id="2" name="Select" type="radio" value="Checked:@Model.FeedBack.AnswerId" />
                                    <label for="Good">
                                        Good
                                    </label>
                                    <div class=" form-coverage">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input id="3" name="Select" type="radio"  value="Checked:@Model.FeedBack.AnswerId"  />
                                    <label for="Neutral">
                                        Neutral
                                    </label>
                                    <div class=" form-coverage">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <input id="4" name="Select" type="radio"  value="Checked:@Model.FeedBack.AnswerId" />
                                    <label for="Poor">
                                        Poor
                                    </label>
                                    <div class=" form-coverage">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" id="comment" name="comment" rows="6">@Model.FeedBack.Comment</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/FeedBack/FeedbackResponse" class="btn btn-dark"> Back</a>
                        }

                    </div>
                </section>
            </div>

        </div>
        <!-- page end-->
    </section>
</section>